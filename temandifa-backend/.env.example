# Server Configuration
PORT=8080
GIN_MODE=debug # release for production

# Logging Configuration
LOG_LEVEL=debug # debug, info, warn, error
LOG_FORMAT=console # console (pretty) or json (structured)

# Database Configuration (PostgreSQL)
# Format: host=localhost user=postgres password=root dbname=temandifa port=5432 sslmode=disable TimeZone=Asia/Jakarta
DB_DSN="host=localhost user=postgres password=postgres dbname=temandifa port=5432 sslmode=disable TimeZone=Asia/Jakarta"

# Redis Configuration
REDIS_ADDR="localhost:6379"
REDIS_PASSWORD=""

# Cache TTL Configuration (in minutes)
CACHE_DETECTION_TTL=60       # Detection cache: 1 hour
CACHE_OCR_TTL=120            # OCR cache: 2 hours
CACHE_TRANSCRIPTION_TTL=30   # Transcription cache: 30 minutes

# Security
# Generate a secure random string (min 32 characters) for production
JWT_SECRET="your-super-secret-key-at-least-32-chars"
JWT_EXPIRATION_DAYS=7

# AI Microservice URL (Python)
AI_SERVICE_URL="http://localhost:8000"
